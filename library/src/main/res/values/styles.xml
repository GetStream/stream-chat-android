<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StreamChat.Themes.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/stream_black</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="colorPrimary">@color/stream_gray</item>
        <item name="colorPrimaryDark">@color/stream_gray_dark</item>
    </style>
    <!--Text, Edit Style-->
    <style name="text_edit">
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColorHint">@color/stream_gray_dark</item>>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/stream_white</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/stream_black</item>
    </style>

    <style name="text_single_line">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/stream_black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:ems">3</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text_b">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/stream_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_s">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/stream_gray_dark</item>
    </style>
    <!--endregion-->
</resources>
