<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.getstream.sdk.chat.viewmodel.ChatActivityViewModel" />

        <variable
            name="activeMessageComposer"
            type="boolean" />

        <variable
            name="activeMessageSend"
            type="boolean" />

        <variable
            name="showMainProgressbar"
            type="boolean" />

        <variable
            name="showLoadMoreProgressbar"
            type="boolean" />

        <variable
            name="isAttachFile"
            type="boolean" />

        <variable
            name="noConnection"
            type="boolean" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        tools:context=".view.activity.ChatActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:background="@drawable/toolbarback"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="PrivateResource">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_back"
                    style="@style/text"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/round_thread_close"
                    android:gravity="center"
                    android:onClick="onClickBackFinish"
                    android:text="‹"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_header_avatar"
                    app:layout_constraintStart_toEndOf="@+id/tv_back"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        style="@style/text_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@{viewModel.channelName()}" />

                    <TextView
                        android:id="@+id/tv_active"
                        style="@style/text_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.lastActive()}"
                        app:isGone="@{!viewModel.isVisibleLastActive()}" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_channel_initial"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/circle_channel_initials"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_header_avatar"
                    app:layout_constraintEnd_toEndOf="@+id/iv_header_avatar"
                    app:layout_constraintStart_toStartOf="@+id/iv_header_avatar"
                    app:layout_constraintTop_toTopOf="@+id/iv_header_avatar" />

                <ImageView
                    android:id="@+id/iv_header_avatar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_active_mark"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/circle_user_online"
                    app:isGone="@{!viewModel.isOnline()}"
                    app:layout_constraintEnd_toEndOf="@+id/iv_header_avatar"
                    app:layout_constraintStart_toEndOf="@+id/iv_header_avatar"
                    app:layout_constraintTop_toTopOf="@+id/iv_header_avatar" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/ll_composer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header"
            tools:listitem="@layout/list_item_message" />

        <include
            android:id="@+id/cl_thread"
            layout="@layout/view_thread"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/ll_composer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_back_attachment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/attach_more"
            android:onClick="onClickAttachmentViewClose"
            android:visibility="gone" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_add_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_thread_toolbar"
            android:paddingStart="20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView"
                style="@style/text_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Add a file"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_close_attach"
                style="@style/text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_thread_close"
                android:gravity="center"
                android:onClick="onClickAttachmentViewClose"
                android:text="×"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView" />

            <LinearLayout
                android:id="@+id/ll_media"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:onClick="onClickSelectMediaViewOpen"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_thread_close"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/imageicon"
                        android:gravity="center" />
                </FrameLayout>

                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Upload a photo or video" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_camera"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:onClick="onClickTakePicture"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_media">

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_thread_close"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/cameraicon"
                        android:gravity="center" />
                </FrameLayout>

                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Upload from a camera" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_file"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:gravity="center_vertical"
                android:onClick="onClickSelectFileViewOpen"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_camera">

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_thread_close"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/fileicon"
                        android:gravity="center" />
                </FrameLayout>

                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Upload a file" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_select_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_select_media"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/ll_composer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_select_title"
                style="@style/text_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@{isAttachFile ? @string/title_file : @string/title_media}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_media_close"
                style="@style/text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/round_thread_close"
                android:gravity="center"
                android:onClick="onClickSelectMediaViewClose"
                android:text="×"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_select_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_select_title" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_media"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                app:isGone="@{isAttachFile}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_select_title"
                tools:listitem="@layout/list_item_select_photo" />

            <ListView
                android:id="@+id/lv_file"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:divider="@null"
                app:isGone="@{!isAttachFile}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_select_title"
                tools:listitem="@layout/list_item_attach_file" />

            <ProgressBar
                android:id="@+id/progressBar_file_loader"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_select_title" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_select_media"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_command_title"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_command"
                style="@style/text_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_command_title"
                app:layout_constraintStart_toEndOf="@+id/tv_command_title"
                app:layout_constraintTop_toTopOf="@+id/tv_command_title" />

            <ListView
                android:id="@+id/lv_command"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:divider="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_command_title"
                tools:listitem="@layout/list_item_command" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv_select_media_back"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ll_composer" />

        <LinearLayout
            android:id="@+id/ll_composer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@{activeMessageComposer ? @drawable/round_message_composer_select : @drawable/round_message_composer}"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_composer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:visibility="gone" />

                <ListView
                    android:id="@+id/lv_composer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:background="@{activeMessageComposer ? @drawable/add_black : @drawable/add_gray}"
                    android:onClick="onClickAttachmentViewOpen" />

                <EditText
                    android:id="@+id/et_message"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Write a message"
                    android:maxLines="100"
                    android:paddingStart="15dp"
                    android:paddingTop="30dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="30dp"
                    android:textSize="15sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_send_back"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/sendicon"
                        app:isGone="@{!activeMessageSend}" />

                    <TextView
                        android:id="@+id/tv_send"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:onClick="onClickSendMessage"
                        app:isGone="@{!activeMessageSend}" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/text_s"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_chat_no_connection"
            android:gravity="center"
            android:text="@string/no_connection"
            android:textColor="@color/red"
            android:visibility="visible"
            app:isGone="@{!noConnection}"
            app:layout_constraintBottom_toTopOf="@+id/ll_composer"
            app:layout_constraintEnd_toEndOf="@+id/ll_composer"
            app:layout_constraintStart_toStartOf="@+id/ll_composer" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isGone="@{!showMainProgressbar}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:isGone="@{!showLoadMoreProgressbar}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header" />

    </android.support.constraint.ConstraintLayout>
</layout>
