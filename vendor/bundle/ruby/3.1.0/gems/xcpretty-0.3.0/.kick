recipe :ruby
recipe :ignore

ignore(%r{^(spec/fixtures)})

process do |files|
  cuke_files = files.take_and_map do |path|
    if path =~ %r{^features/\w+\.feature$}
      path
    elsif path =~ %r{^bin}
      # run all features when bin/xcpretty changes
      Dir.glob("features/**/*.feature")
    end
  end

  execute "cucumber -f progress #{cuke_files.join(' ')}"
end