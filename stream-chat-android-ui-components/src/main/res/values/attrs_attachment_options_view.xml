<resources>
    <!--TODO rename this and its members to AttachmentGallery... to better
    TODO reflect its capabilities -->
    <declare-styleable name="AttachmentOptionsView">
        <!-- Text size of the option text -->
        <attr name="streamUiAttachmentOptionTextSize" format="dimension|reference" />
        <!-- A color of the option text -->
        <attr name="streamUiAttachmentOptionTextColor" format="color|reference" />
        <!-- Font name of the option text -->
        <attr name="streamUiAttachmentOptionTextFont" format="reference" />
        <!-- Font assets reference for the option text -->
        <attr name="streamUiAttachmentOptionTextFontAssets" format="string" />
        <!-- Text style of the option text: "normal", "bold", and "italic". -->
        <attr name="streamUiAttachmentOptionTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Background color of the options dialog -->
        <attr name="streamUiAttachmentOptionsBackgroundColor" format="color|reference" />
        <!-- "Reply to attachment" enabled/disabled -->
        <attr name="streamUiAttachmentReplyEnabled" format="boolean" />
        <!-- Reply icon drawable -->
        <attr name="streamUiReplyIcon" format="reference" />
        <!-- "Show in chat" enabled/disabled -->
        <attr name="streamUiShowInChatEnabled" format="boolean" />
        <!-- "Show in chat" icon drawable -->
        <attr name="streamUiShowInChatIcon" format="reference" />
        <!-- "Save media" enabled/disabled -->
        <attr name="streamUiSaveMediaEnabled" format="boolean" />
        <!-- "Save" icon drawable -->
        <attr name="streamUiSaveMediaIcon" format="reference" />
        <!-- "Delete" enabled/disabled -->
        <attr name="streamUiDeleteEnabled" format="boolean" />
        <!-- "Delete" icon drawable -->
        <attr name="streamUiDeleteIcon" format="reference" />
        <!-- "Delete" text tint -->
        <attr name="streamUiDeleteTextTint" format="reference" />

        <!-- The drawable for the play button icon displayed above videos in the main viewing
         area of the gallery. -->
        <attr name="streamUiAttachmentGalleryViewMediaPlayVideoButtonIcon" format="reference" />
        <!-- Tints the icon overlaid above videos in the main viewing area of the gallery. -->
        <attr name="streamUiAttachmentGalleryViewMediaPlayVideoIconTint"
            format="reference|color" />
        <!-- The background color of the View containing the play button overlaid above
         the main viewing area of the gallery. -->
        <attr name="streamUiAttachmentGalleryViewMediaPlayVideoIconBackgroundColor"
            format="color|reference" />
        <!-- The corner radius of the play button in the main viewing area of the gallery. -->
        <attr name="streamUiAttachmentGalleryViewMediaPlayVideoIconCornerRadius"
            format="dimension" />
        <!-- The elevation of the play button in the main viewing area of the gallery. -->
        <attr name="streamUiAttachmentGalleryViewMediaPlayVideoIconElevation"
            format="dimension" />
        <!-- Sets the top padding of the play video icon displayed above the main viewing
         area of the gallery. -->
        <attr name="streamUiAttachmentGalleryViewMediaPlayVideoIconPaddingTop"
            format="dimension" />
        <!-- Sets the bottom padding of the play video icon in the main viewing
        area of the gallery. -->
        <attr name="streamUiAttachmentGalleryViewMediaPlayVideoIconPaddingBottom"
            format="dimension" />
        <!-- Sets the start padding of the play video icon in the main viewing
        area of the gallery. -->
        <attr name="streamUiAttachmentGalleryViewMediaPlayVideoIconPaddingStart"
            format="dimension" />
        <!-- Sets the end padding of the play video icon in the main viewing
        area of the gallery. -->
        <attr name="streamUiAttachmentGalleryViewMediaPlayVideoIconPaddingEnd"
            format="dimension" />
        <!-- Sets the width of the play video button in the main viewing area of the gallery. -->
        <attr name="streamUiAttachmentGalleryViewMediaPlayIconWidth" format="dimension">
            <!-- The view should be as big as its parent (minus padding).
                 Introduced in API Level 8. -->
            <enum name="match_parent" value="-1" />
            <!-- The view should be only big enough to enclose its content (plus padding). -->
            <enum name="wrap_content" value="-2" />
        </attr>
        <!-- Sets the width of the play video button in the main viewing area of the gallery. -->
        <attr name="streamUiAttachmentGalleryViewMediaPlayIconHeight" format="dimension">
            <!-- The view should be as big as its parent (minus padding).
                 Introduced in API Level 8. -->
            <enum name="match_parent" value="-1" />
            <!-- The view should be only big enough to enclose its content (plus padding). -->
            <enum name="wrap_content" value="-2" />
        </attr>

        <!-- TODO update kdocs -->
        <!-- The drawable for the play button icon overlaid above video attachments. -->
        <attr name="streamUiAttachmentGalleryMediaOverviewPlayVideoButtonIcon" format="reference" />
        <!-- Tints the icon overlaid on top of video attachment previews. -->
        <attr name="streamUiAttachmentGalleryMediaOverviewPlayVideoIconTint" format="reference|color" />
        <!-- The background color of the View containing the play button. -->
        <attr name="streamUiAttachmentGalleryMediaOverviewPlayVideoIconBackgroundColor" format="color|reference" />
        <!-- The corner radius of the play button. -->
        <attr name="streamUiAttachmentGalleryMediaOverviewPlayVideoIconCornerRadius" format="dimension" />
        <!-- The elevation of the play button. -->
        <attr name="streamUiAttachmentGalleryMediaOverviewPlayVideoIconElevation" format="dimension" />
        <!-- Sets the top padding of the play video icon. -->
        <attr name="streamUiAttachmentGalleryMediaOverviewPlayVideoIconPaddingTop" format="dimension" />
        <!-- Sets the bottom padding of the play video icon. -->
        <attr name="streamUiAttachmentGalleryMediaOverviewPlayVideoIconPaddingBottom" format="dimension" />
        <!-- Sets the start padding of the play video icon. -->
        <attr name="streamUiAttachmentGalleryMediaOverviewPlayVideoIconPaddingStart" format="dimension" />
        <!-- Sets the end padding of the play video icon. -->
        <attr name="streamUiAttachmentGalleryMediaOverviewPlayVideoIconPaddingEnd" format="dimension" />
    </declare-styleable>
</resources>
