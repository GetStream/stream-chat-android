<resources>
    <declare-styleable name="MessageComposerView">
        <!-- Root content -->
        <attr name="streamUiMessageComposerDividerBackgroundDrawable" format="reference" />
        <!-- Command suggestions content -->

        <!-- Mention suggestions content -->

        <!-- Center content -->
        <attr name="streamUiMessageComposerScrollbarEnabled" format="boolean"/>
        <attr name="streamUiMessageComposerScrollbarFadingEnabled" format="boolean"/>

        <!-- Leading content -->
        <attr name="streamUiMessageComposerAttachmentsButtonVisible" format="boolean" />
        <attr name="streamUiMessageComposerAttachmentsButtonIconDrawable" format="reference" />
        <attr name="streamUiMessageComposerAttachmentsButtonRippleColor" format="color|reference" />
        <attr name="streamUiMessageComposerCommandsButtonVisible" format="boolean" />
        <attr name="streamUiMessageComposerCommandsButtonIconDrawable" format="reference" />
        <attr name="streamUiMessageComposerCommandsButtonRippleColor" format="color|reference" />

        <!-- Footer content -->
        <attr name="streamUiMessageComposerAlsoSendToChannelCheckboxVisible" format="boolean" />
        <attr name="streamUiMessageComposerAlsoSendToChannelCheckboxDrawable" format="reference" />
        <attr name="streamUiMessageComposerAlsoSendToChannelCheckboxText" format="string" />

        <attr name="streamUiMessageComposerAlsoSendToChannelCheckboxTextSize" format="dimension" />
        <attr name="streamUiMessageComposerAlsoSendToChannelCheckboxTextColor" format="reference|color" />
        <attr name="streamUiMessageComposerAlsoSendToChannelCheckboxTextFontAssets" format="string" />
        <attr name="streamUiMessageComposerAlsoSendToChannelCheckboxTextFont" format="string" />
        <attr name="streamUiMessageComposerAlsoSendToChannelCheckboxTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>

        <!-- Header content -->
        <attr name="streamUiMessageComposerEditModeIconDrawable" format="reference" />
        <attr name="streamUiMessageComposerReplyModeIconDrawable" format="reference" />
        <attr name="streamUiMessageComposerDismissModeIconDrawable" format="reference" />

        <!-- Trailing content -->
        <attr name="streamUiMessageComposerSendMessageButtonEnabled" format="boolean" />
        <attr name="streamUiMessageComposerSendMessageButtonIconDrawable" format="reference" />

        <attr name="streamUiMessageComposerCooldownTimerTextSize" format="dimension" />
        <attr name="streamUiMessageComposerCooldownTimerTextColor" format="reference|color" />
        <attr name="streamUiMessageComposerCooldownTimerTextFontAssets" format="string" />
        <attr name="streamUiMessageComposerCooldownTimerTextFont" format="string" />
        <attr name="streamUiMessageComposerCooldownTimerTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>

        <attr name="streamUiMessageComposerCooldownTimerBackgroundDrawable" format="reference" />
    </declare-styleable>
</resources>
