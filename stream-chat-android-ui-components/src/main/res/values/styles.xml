<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StreamBaseAvatarStyle">
        <item name="streamAvatarBorderWidth">0dp</item>
        <item name="streamAvatarBorderColor">@color/stream_white</item>
        <item name="streamAvatarTextColor">@color/stream_white</item>
        <item name="streamAvatarTextStyle">bold</item>
    </style>

    <style name="StreamMessageListAvatarStyle" parent="StreamBaseAvatarStyle">
        <item name="android:layout_width">@dimen/stream_avatar_size_small</item>
        <item name="android:layout_height">@dimen/stream_avatar_size_small</item>
        <item name="streamAvatarTextSize">@dimen/stream_avatar_text_size_small</item>
        <item name="streamAvatarOnlineIndicatorEnabled">false</item>
    </style>

    <style name="StreamUserAvatarStyle" parent="StreamBaseAvatarStyle">
        <item name="android:layout_width">@dimen/stream_avatar_size_medium</item>
        <item name="android:layout_height">@dimen/stream_avatar_size_medium</item>
        <item name="streamAvatarTextSize">@dimen/stream_avatar_text_size_medium</item>
        <item name="streamAvatarOnlineIndicatorEnabled">false</item>
    </style>

    <style name="StreamChannelListAvatarStyle" parent="StreamBaseAvatarStyle">
        <item name="android:layout_width">@dimen/stream_avatar_size_medium</item>
        <item name="android:layout_height">@dimen/stream_avatar_size_medium</item>
        <item name="streamAvatarTextSize">@dimen/stream_avatar_text_size_medium</item>
        <item name="streamAvatarOnlineIndicatorEnabled">true</item>
    </style>

    <style name="StreamGroupActionsAvatarStyle" parent="StreamBaseAvatarStyle">
        <item name="android:layout_width">@dimen/stream_avatar_size_large</item>
        <item name="android:layout_height">@dimen/stream_avatar_size_large</item>
        <item name="streamAvatarTextSize">@dimen/stream_avatar_text_size_large</item>
        <item name="streamAvatarOnlineIndicatorEnabled">true</item>
    </style>

    <style name="StreamChannelActionsBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/StreamChannelActionsBottomSheet</item>
    </style>

    <style name="StreamChannelActionsBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/StreamRoundedBottomSheetDialog</item>
    </style>

    <style name="StreamRoundedBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="StreamChannelActionsButtonStyle">
        <item name="android:paddingStart">@dimen/stream_spacing_medium</item>
        <item name="android:paddingEnd">@dimen/stream_spacing_medium</item>
        <item name="android:drawablePadding">@dimen/stream_spacing_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/stream_channel_actions_item_height</item>
        <item name="android:textSize">@dimen/stream_text_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="StreamChannelsHeaderTitleStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/stream_text_large</item>
        <item name="android:textColor">@color/stream_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="StreamAttachmentBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="StreamAttachmentsCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/StreamAttachmentsShapeAppearanceOverlay</item>
    </style>

    <style name="StreamAttachmentsShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="StreamAttachmentDialogToggleButton">
        <item name="android:layout_width">@dimen/stream_attachment_dialog_button_size</item>
        <item name="android:layout_height">@dimen/stream_attachment_dialog_button_size</item>
        <item name="android:backgroundTint">@color/stream_attachment_tab_button</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="StreamUserReactionAvatarStyle" parent="StreamBaseAvatarStyle">
        <item name="android:layout_width">@dimen/stream_avatar_size_large</item>
        <item name="android:layout_height">@dimen/stream_avatar_size_large</item>
        <item name="streamAvatarTextSize">@dimen/stream_avatar_text_size_large</item>
        <item name="streamAvatarOnlineIndicatorEnabled">false</item>
    </style>
</resources>
