<resources>
    <!-- PollView -->
    <declare-styleable name="PollView">

        <!-- Text size of the poll title. -->
        <attr name="streamUiPollTitleTextSize" format="dimension|reference" />
        <!-- A color of the poll title. -->
        <attr name="streamUiPollTitleTextColor" format="color|reference" />
        <!-- Font assets reference for the poll title. -->
        <attr name="streamUiPollTitleFontAssets" format="string" />
        <!-- Font name of the poll title. -->
        <attr name="streamUiPollTitleTextFont" format="reference" />
        <!-- Text style of the poll title: "normal", "bold", and "italic". -->
        <attr name="streamUiPollTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Text size of the poll subtitle. -->
        <attr name="streamUiPollSubtitleTextSize" format="dimension|reference" />
        <!-- A color of the poll subtitle. -->
        <attr name="streamUiPollSubtitleTextColor" format="color|reference" />
        <!-- Font assets reference for the poll subtitle. -->
        <attr name="streamUiPollSubtitleFontAssets" format="string" />
        <!-- Font name of the poll subtitle. -->
        <attr name="streamUiPollSubtitleTextFont" format="reference" />
        <!-- Text style of the poll subtitle: "normal", "bold", and "italic". -->
        <attr name="streamUiPollSubtitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- The drawable of the check icon of poll option. -->
        <attr name="streamUiPollOptionCheckDrawable" format="reference" />

        <!-- Text size of the poll option. -->
        <attr name="streamUiPollOptionTextSize" format="dimension|reference" />
        <!-- A color of the poll option. -->
        <attr name="streamUiPollOptionTextColor" format="color|reference" />
        <!-- Font assets reference for the poll option. -->
        <attr name="streamUiPollOptionFontAssets" format="string" />
        <!-- Font name of the poll option. -->
        <attr name="streamUiPollOptionTextFont" format="reference" />
        <!-- Text style of the poll option: "normal", "bold", and "italic". -->
        <attr name="streamUiPollOptionTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Text size of the poll votes. -->
        <attr name="streamUiPollVotesTextSize" format="dimension|reference" />
        <!-- A color of the poll votes. -->
        <attr name="streamUiPollVotesTextColor" format="color|reference" />
        <!-- Font assets reference for the poll votes. -->
        <attr name="streamUiPollVotesFontAssets" format="string" />
        <!-- Font name of the poll votes. -->
        <attr name="streamUiPollVotesTextFont" format="reference" />
        <!-- Text style of the poll votes: "normal", "bold", and "italic". -->
        <attr name="streamUiPollVotesTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Text size of the poll close. -->
        <attr name="streamUiPollCloseTextSize" format="dimension|reference" />
        <!-- A color of the poll close. -->
        <attr name="streamUiPollCloseTextColor" format="color|reference" />
        <!-- Font assets reference for the poll close. -->
        <attr name="streamUiPollCloseFontAssets" format="string" />
        <!-- Font name of the poll close. -->
        <attr name="streamUiPollCloseTextFont" format="reference" />
        <!-- Text style of the poll close: "normal", "bold", and "italic". -->
        <attr name="streamUiPollCloseTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Text size of the poll results. -->
        <attr name="streamUiPollResultsTextSize" format="dimension|reference" />
        <!-- A color of the poll results. -->
        <attr name="streamUiPollResultsTextColor" format="color|reference" />
        <!-- Font assets reference for the poll results. -->
        <attr name="streamUiPollResultsFontAssets" format="string" />
        <!-- Font name of the poll results. -->
        <attr name="streamUiPollResultsTextFont" format="reference" />
        <!-- Text style of the poll results: "normal", "bold", and "italic". -->
        <attr name="streamUiPollResultsTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Text size of the show all options. -->
        <attr name="streamUiPollShowAllOptionsTextSize" format="dimension|reference" />
        <!-- A color of the show all options. -->
        <attr name="streamUiPollShowAllOptionsTextColor" format="color|reference" />
        <!-- Font assets reference for the show all options. -->
        <attr name="streamUiPollShowAllOptionsFontAssets" format="string" />
        <!-- Font name of the show all options. -->
        <attr name="streamUiPollShowAllOptionsTextFont" format="reference" />
        <!-- Text style of the show all options: "normal", "bold", and "italic". -->
        <attr name="streamUiPollShowAllOptionsTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
    </declare-styleable>
</resources>
