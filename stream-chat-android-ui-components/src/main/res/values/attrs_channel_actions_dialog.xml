<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ChannelActionsDialog">
        <!-- Channel actions dialog title with member names -->
        <attr name="streamUiChannelActionsMemberNamesTextSize" format="dimension|reference" />
        <attr name="streamUiChannelActionsMemberNamesTextColor" format="color|reference" />
        <attr name="streamUiChannelActionsMemberNamesTextFont" format="reference" />
        <attr name="streamUiChannelActionsMemberNamesTextFontAssets" format="string" />
        <attr name="streamUiChannelActionsMemberNamesTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Channel actions dialog subtitle with member info -->
        <attr name="streamUiChannelActionsMemberInfoTextSize" format="dimension|reference" />
        <attr name="streamUiChannelActionsMemberInfoTextColor" format="color|reference" />
        <attr name="streamUiChannelActionsMemberInfoTextFont" format="reference" />
        <attr name="streamUiChannelActionsMemberInfoTextFontAssets" format="string" />
        <attr name="streamUiChannelActionsMemberInfoTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Channel action item text style -->
        <attr name="streamUiChannelActionsItemTextSize" format="dimension|reference" />
        <attr name="streamUiChannelActionsItemTextColor" format="color|reference" />
        <attr name="streamUiChannelActionsItemTextFont" format="reference" />
        <attr name="streamUiChannelActionsItemTextFontAssets" format="string" />
        <attr name="streamUiChannelActionsItemTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="streamUiChannelActionsWarningItemTextSize" format="dimension|reference" />
        <attr name="streamUiChannelActionsWarningItemTextColor" format="color|reference" />
        <attr name="streamUiChannelActionsWarningItemTextFont" format="reference" />
        <attr name="streamUiChannelActionsWarningItemTextFontAssets" format="string" />
        <attr name="streamUiChannelActionsWarningItemTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="streamUiChannelActionsViewInfoIcon" format="reference" />
        <attr name="streamUiChannelActionsViewInfoEnabled" format="boolean" />
        <attr name="streamUiChannelActionsLeaveGroupIcon" format="reference" />
        <attr name="streamUiChannelActionsLeaveGroupEnabled" format="boolean" />
        <attr name="streamUiChannelActionsDeleteConversationIcon" format="reference" />
        <attr name="streamUiChannelActionsDeleteConversationEnabled" format="boolean" />
        <attr name="streamUiChannelActionsCancelIcon" format="reference" />
        <attr name="streamUiChannelActionsCancelEnabled" format="boolean" />
        <attr name="streamUiChannelActionsBackground" format="reference" />
    </declare-styleable>
</resources>
