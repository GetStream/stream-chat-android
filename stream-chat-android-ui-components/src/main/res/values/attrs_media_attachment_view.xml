<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- MediaAttachmentView -->
    <declare-styleable name="MediaAttachmentView">
        <!-- Drawable of the media attachment progressbar -->
        <attr name="streamUiMediaAttachmentProgressIcon" format="reference" />
        <!-- Giphy icon drawable -->
        <attr name="streamUiMediaAttachmentGiphyIcon" format="reference" />
        <!-- Media attachment placeholder icon -->
        <attr name="streamUiMediaAttachmentPlaceHolderIcon" format="reference" />
        <!-- Media attachment background color -->
        <attr name="streamUiMediaAttachmentImageBackgroundColor" format="color|reference" />
        <!-- Media attachment "more" count overlay color -->
        <attr name="streamUiMediaAttachmentMoreCountOverlayColor" format="color|reference" />

        <!-- Text size of the media attachment "more" count text -->
        <attr name="streamUiMediaAttachmentMoreCountTextSize" format="dimension|reference" />
        <!-- A color of the media attachment "more" count text -->
        <attr name="streamUiMediaAttachmentMoreCountTextColor" format="color|reference" />
        <!-- Font name of the media attachment "more" count text -->
        <attr name="streamUiMediaAttachmentMoreCountTextFont" format="reference" />
        <!-- Font assets reference for the media attachment "more" count text -->
        <attr name="streamUiMediaAttachmentMoreCountFontAssets" format="string" />
        <!-- Text style of the media attachment "more" count text: "normal", "bold", and "italic". -->
        <attr name="streamUiMediaAttachmentMoreCountTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
    </declare-styleable>
</resources>
