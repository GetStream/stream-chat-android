<resources>
    <!-- MediaAttachmentView -->
    <declare-styleable name="MediaAttachmentView">
        <!-- Drawable of the image attachment progressbar. -->
        <attr name="streamUiMediaAttachmentProgressIcon" format="reference" />
        <!-- Image attachment placeholder icon. -->
        <attr name="streamUiMediaAttachmentPlaceHolderIcon" format="reference" />
        <!-- Image attachment placeholder icon tint. -->
        <attr name="streamUiMediaAttachmentPlaceHolderIconTint" format="color|reference" />
        <!-- Image and video attachment background color. -->
        <attr name="streamUiMediaAttachmentMediaPreviewBackgroundColor" format="color|reference" />
        <!-- The color of the overlay displaying the number of media attachments in the message
         that do not fit inside the preview group. -->
        <attr name="streamUiMediaAttachmentMoreCountOverlayColor" format="color|reference" />

        <!-- Text size of the image attachment "more" count text. -->
        <attr name="streamUiMediaAttachmentMoreCountTextSize" format="dimension|reference" />
        <!-- A color of the image attachment "more" count text. -->
        <attr name="streamUiMediaAttachmentMoreCountTextColor" format="color|reference" />
        <!-- Font name of the image attachment "more" count text. -->
        <attr name="streamUiMediaAttachmentMoreCountTextFont" format="reference" />
        <!-- Font assets reference for the image attachment "more" count text. -->
        <attr name="streamUiMediaAttachmentMoreCountFontAssets" format="string" />
        <!-- Text style of the image attachment "more" count text: "normal", "bold", and "italic". -->
        <attr name="streamUiMediaAttachmentMoreCountTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- The icon overlaid on top of video attachment previews. -->
        <attr name="streamUiMediaAttachmentPlayVideoIcon" format="reference" />
        <!-- Tints the icon overlaid on top of video attachment previews. -->
        <attr name="streamUiMediaAttachmentPlayVideoIconTint" format="reference|color" />
        <!-- The background color of the View containing the play button. -->
        <attr name="streamUiMediaAttachmentPlayVideoIconBackgroundColor" format="color|reference" />
        <!-- The corner radius of the play button. -->
        <attr name="streamUiMediaAttachmentPlayVideoIconCornerRadius" format="dimension" />
        <!-- The elevation of the play button. -->
        <attr name="streamUiMediaAttachmentPlayVideoIconElevation" format="dimension" />
        <!-- Sets the top padding of the play video icon. -->
        <attr name="streamUiMediaAttachmentPlayVideoIconPaddingTop" format="dimension" />
        <!-- Sets the bottom padding of the play video icon. -->
        <attr name="streamUiMediaAttachmentPlayVideoIconPaddingBottom" format="dimension" />
        <!-- Sets the start padding of the play video icon. -->
        <attr name="streamUiMediaAttachmentPlayVideoIconPaddingStart" format="dimension" />
        <!-- Sets the end padding of the play video icon. -->
        <attr name="streamUiMediaAttachmentPlayVideoIconPaddingEnd" format="dimension" />
        <!-- Sets the padding of the play video icon on all sides.
        Using this attribute will override other padding attributes such as start the padding set on
        top, bottom, start and end sides of the icon. -->
        <attr name="streamUiMediaAttachmentPlayVideoIconPadding" format="dimension" />
    </declare-styleable>
</resources>
