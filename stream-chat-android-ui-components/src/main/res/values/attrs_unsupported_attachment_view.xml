<resources>
    <!-- FileAttachmentsView -->
    <declare-styleable name="UnsupportedAttachmentView">
        <!-- Unsupported attachment background color -->
        <attr name="streamUiUnsupportedAttachmentBackgroundColor" format="color|reference" />
        <!-- Unsupported attachment stroke color -->
        <attr name="streamUiUnsupportedAttachmentStrokeColor" format="color|reference" />
        <!-- Unsupported attachment stroke width -->
        <attr name="streamUiUnsupportedAttachmentStrokeWidth" format="dimension" />
        <!-- Unsupported attachment corner radius -->
        <attr name="streamUiUnsupportedAttachmentCornerRadius" format="dimension" />

        <!-- Text size of the unsupported attachment title -->
        <attr name="streamUiUnsupportedAttachmentTitleTextSize" format="dimension|reference" />
        <!-- The color of the unsupported attachment title -->
        <attr name="streamUiUnsupportedAttachmentTitleTextColor" format="color|reference" />
        <!-- The font of the unsupported attachment title -->
        <attr name="streamUiUnsupportedAttachmentTitleTextFont" format="reference" />
        <!-- Font assets reference for the unsupported attachment title -->
        <attr name="streamUiUnsupportedAttachmentTitleFontAssets" format="string" />
        <!-- Text style of the unsupported attachment title: "normal", "bold", and "italic". -->
        <attr name="streamUiUnsupportedAttachmentTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
    </declare-styleable>
</resources>
