<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StreamAvatarView">
        <attr name="streamAvatarBorderWidth" />
        <attr name="streamAvatarBorderColor" />
        <attr name="streamAvatarTextSize" />
        <attr name="streamAvatarTextColor" />
        <attr name="streamAvatarTextFont" />
        <attr name="streamAvatarTextFontAssets" />
        <attr name="streamAvatarTextStyle" />
        <attr name="streamAvatarOnlineIndicatorEnabled" format="boolean" />
    </declare-styleable>

    <!--MessageInputViewNew-->
    <declare-styleable name="StreamMessageInputView">
        <!--Attachment Button-->
        <attr name="streamAttachButtonEnabled" format="boolean" />
        <attr name="streamAttachButtonIcon" format="reference" />
        <attr name="streamAttachButtonIconColor" format="color|reference" />
        <attr name="streamAttachButtonIconPressedColor" format="color|reference" />
        <attr name="streamAttachButtonIconDisabledColor" format="color|reference" />
        <attr name="streamAttachButtonSelectedIconColor" format="color|reference" />
        <attr name="streamAttachButtonWidth" format="dimension|reference" />
        <attr name="streamAttachButtonHeight" format="dimension|reference" />

        <!--Lightning Button-->
        <attr name="streamLightningButtonEnabled" format="boolean" />
        <attr name="streamLightningButtonIcon" format="reference" />
        <attr name="streamLightningButtonIconColor" format="color|reference" />
        <attr name="streamLightningButtonIconPressedColor" format="color|reference" />
        <attr name="streamLightningButtonIconDisabledColor" format="color|reference" />
        <attr name="streamLightningButtonSelectedIconColor" format="color|reference" />
        <attr name="streamLightningButtonWidth" format="dimension|reference" />
        <attr name="streamLightningButtonHeight" format="dimension|reference" />

        <!--Input Text-->
        <attr name="streamMessageInputHint" format="string" />
        <attr name="streamMessageInputTextSize" format="dimension|reference" />
        <attr name="streamMessageInputTextColor" format="color|reference" />
        <attr name="streamMessageInputHintTextColor" format="color|reference" />
        <attr name="streamMessageInputTextFont" format="reference" />
        <attr name="streamMessageInputTextFontAssets" format="string" />
        <attr name="streamMessageInputTextStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>

        <!--Send Button-->
        <attr name="streamSendButtonEnabledIconColor" format="color|reference" />
        <attr name="streamSendButtonDisabledIconColor" format="color|reference" />
        <attr name="streamSendButtonPressedIconColor" format="color|reference" />
        <attr name="streamSendButtonEnabledIcon" format="reference" />
        <attr name="streamSendButtonDisabledIcon" format="reference" />
        <attr name="streamSendButtonWidth" format="dimension|reference" />
        <attr name="streamSendButtonHeight" format="dimension|reference" />

        <!-- "Also send to channel" CheckBox -->
        <attr name="streamShowSendAlsoToChannelCheckbox" format="boolean" />
    </declare-styleable>

    <!--ChannelsHeaderView-->
    <declare-styleable name="StreamChannelListHeaderView">
        <attr name="streamAvatarWidth" />
        <attr name="streamAvatarHeight" />
        <attr name="streamAvatarBorderWidth" />
        <attr name="streamAvatarBorderColor" />
        <attr name="streamAvatarTextSize" />
        <attr name="streamAvatarTextColor" />
        <attr name="streamAvatarTextFont" />
        <attr name="streamAvatarTextFontAssets" />
        <attr name="streamAvatarTextStyle" />
        <attr name="streamShowUserAvatar" format="boolean" />

        <attr name="streamOnlineTitleText" format="string|reference" />
        <attr name="streamOnlineTitleTextSize" format="dimension|reference" />
        <attr name="streamOnlineTitleTextColor" format="color|reference" />
        <attr name="streamOnlineTitleTextFont" format="reference" />
        <attr name="streamOnlineTitleFontAssets" format="string" />
        <attr name="streamOnlineTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="streamOfflineTitleText" format="string|reference" />
        <attr name="streamOfflineTitleTextSize" format="dimension|reference" />
        <attr name="streamOfflineTitleTextColor" format="color|reference" />
        <attr name="streamOfflineTitleTextFont" format="reference" />
        <attr name="streamOfflineTitleFontAssets" format="string" />
        <attr name="streamOfflineTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="streamShowOfflineProgressBar" format="boolean" />
        <attr name="streamOfflineProgressBarTint" format="color|reference" />

        <attr name="streamShowAddChannelButton" format="boolean" />
        <attr name="streamAddChannelButtonHeight" format="dimension|reference" />
        <attr name="streamAddChannelButtonWidth" format="dimension|reference" />
        <attr name="streamAddChannelButtonIcon" format="reference" />
        <attr name="streamAddChannelButtonTint" format="color|reference" />
        <attr name="streamAddChannelBackgroundTint" format="color|reference" />
    </declare-styleable>

    <!--MessageListHeaderView-->
    <declare-styleable name="StreamMessagesHeaderView" parent="AvatarView">
        <attr name="streamMessagesHeaderShowUserAvatar" format="boolean" />

        <attr name="streamMessagesHeaderTitleTextSize" format="dimension|reference" />
        <attr name="streamMessagesHeaderTitleTextColor" format="color|reference" />
        <attr name="streamMessagesHeaderTitleTextFont" format="reference" />
        <attr name="streamMessagesHeaderTitleFontAssets" format="string" />
        <attr name="streamMessagesHeaderTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="streamMessagesHeaderOfflineLabelText" format="string|reference" />
        <attr name="streamMessagesHeaderOfflineLabelTextSize" format="dimension|reference" />
        <attr name="streamMessagesHeaderOfflineLabelTextColor" format="color|reference" />
        <attr name="streamMessagesHeaderOfflineLabelTextFont" format="reference" />
        <attr name="streamMessagesHeaderOfflineLabelFontAssets" format="string" />
        <attr name="streamMessagesHeaderOfflineLabelTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="streamMessagesHeaderSearchingForNetworkLabelText" format="string|reference" />
        <attr name="streamMessagesHeaderSearchingForNetworkLabelTextSize" format="dimension|reference" />
        <attr name="streamMessagesHeaderSearchingForNetworkLabelColor" format="color|reference" />
        <attr name="streamMessagesHeaderSearchingForNetworkLabelTextFont" format="reference" />
        <attr name="streamMessagesHeaderSearchingForNetworkLabelFontAssets" format="string" />
        <attr name="streamMessagesHeaderSearchingForNetworkLabelTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="streamMessagesHeaderShowSearchingForNetworkProgressBar" format="boolean" />
        <attr name="streamMessagesHeaderSearchingForNetworkProgressBarTint" format="color|reference" />

        <attr name="streamMessagesHeaderBackButtonDrawable" format="reference" />
        <attr name="streamMessagesHeaderShowBackButton" format="boolean" />

        <attr name="streamMessagesHeaderShowBackButtonBadge" format="boolean" />
        <attr name="streamMessagesHeaderBackButtonBadgeBackgroundColor" format="color" />

        <attr name="streamMessagesHeaderDefaultLabelText" format="string|reference" />
        <attr name="streamMessagesHeaderDefaultLabelTextSize" format="dimension|reference" />
        <attr name="streamMessagesHeaderDefaultLabelTextColor" format="color|reference" />
        <attr name="streamMessagesHeaderDefaultLabelTextFont" format="reference" />
        <attr name="streamMessagesHeaderDefaultLabelFontAssets" format="string" />
        <attr name="streamMessagesHeaderDefaultLabelTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="streamMessagesHeaderTypingLabelText" format="string|reference" />
        <attr name="streamMessagesHeaderTypingLabelTextSize" format="dimension|reference" />
        <attr name="streamMessagesHeaderTypingLabelTextColor" format="color|reference" />
        <attr name="streamMessagesHeaderTypingLabelTextFont" format="reference" />
        <attr name="streamMessagesHeaderTypingLabelFontAssets" format="string" />
        <attr name="streamMessagesHeaderTypingLabelTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
    </declare-styleable>

    <!--ReactionsView-->
    <declare-styleable name="StreamReactionsViewStyle">
        <attr name="streamReactionsViewOrientation" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="undefined" value="2"/>
        </attr>

        <attr name="streamViewReactionsBubbleColorMine" format="color|reference" />
        <attr name="streamViewReactionsBubbleBorderColorMine" format="color|reference" />
        <attr name="streamViewReactionsBubbleColorTheirs" format="color|reference" />
        <attr name="streamViewReactionsTotalHeight" format="dimension" />
        <attr name="streamViewReactionsHorizontalPadding" format="dimension" />
        <attr name="streamViewReactionsItemSize" format="dimension" />
        <attr name="streamViewReactionsItemMargin" format="dimension" />
        <attr name="streamViewReactionsBubbleHeight" format="dimension" />
        <attr name="streamViewReactionsBubbleRadius" format="dimension" />
        <attr name="streamViewReactionsLargeTailBubbleCy" format="dimension" />
        <attr name="streamViewReactionsLargeTailBubbleRadius" format="dimension" />
        <attr name="streamViewReactionsLargeTailBubbleOffset" format="dimension" />
        <attr name="streamViewReactionsSmallTailBubbleCy" format="dimension" />
        <attr name="streamViewReactionsSmallTailBubbleRadius" format="dimension" />
        <attr name="streamViewReactionsSmallTailBubbleOffset" format="dimension" />

        <attr name="streamEditReactionsBubbleColor" format="color|reference" />
        <attr name="streamEditReactionsTotalHeight" format="dimension" />
        <attr name="streamEditReactionsHorizontalPadding" format="dimension" />
        <attr name="streamEditReactionsItemSize" format="dimension" />
        <attr name="streamEditReactionsItemMargin" format="dimension" />
        <attr name="streamEditReactionsBubbleHeight" format="dimension" />
        <attr name="streamEditReactionsBubbleRadius" format="dimension" />
        <attr name="streamEditReactionsLargeTailBubbleCy" format="dimension" />
        <attr name="streamEditReactionsLargeTailBubbleRadius" format="dimension" />
        <attr name="streamEditReactionsLargeTailBubbleOffset" format="dimension" />
        <attr name="streamEditReactionsSmallTailBubbleCy" format="dimension" />
        <attr name="streamEditReactionsSmallTailBubbleRadius" format="dimension" />
        <attr name="streamEditReactionsSmallTailBubbleOffset" format="dimension" />
    </declare-styleable>
</resources>
