<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MentionListView">
        <!-- A background color of the MentionListView -->
        <attr name="streamUiBackground" format="color|reference"/>
        <!-- A drawable of the empty mention -->
        <attr name="streamUiEmptyStateDrawable" format="reference"/>

        <!-- Text size of the sender name -->
        <attr name="streamUiSenderNameTextSize" format="dimension"/>
        <!-- A color of the sender name -->
        <attr name="streamUiSenderNameTextColor" format="color|reference"/>
        <!-- Font name of the sender name -->
        <attr name="streamUiSenderNameTextFont" format="reference"/>
        <!-- Font assets reference for the sender name -->
        <attr name="streamUiSenderNameTextFontAssets" format="string"/>
        <!-- Text style of the sender name: "normal", "bold", and "italic". -->
        <attr name="streamUiSenderNameTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Text size of the message preview -->
        <attr name="streamUiMessageTextSize" format="dimension"/>
        <!-- A color of the message preview -->
        <attr name="streamUiMessageTextColor" format="color|reference"/>
        <!-- Font name of the message preview -->
        <attr name="streamUiMessageTextFont" format="reference"/>
        <!-- Font assets reference for the message preview -->
        <attr name="streamUiMessageTextFontAssets" format="string"/>
        <!-- Text style of the message preview: "normal", "bold", and "italic". -->
        <attr name="streamUiMessageTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Text size of the message time label -->
        <attr name="streamUiMessageTimeTextSize" format="dimension"/>
        <!-- A color of the message time label -->
        <attr name="streamUiMessageTimeTextColor" format="color|reference"/>
        <!-- Font name of the message time label -->
        <attr name="streamUiMessageTimeTextFont" format="reference"/>
        <!-- Font assets reference for the message time label -->
        <attr name="streamUiMessageTimeTextFontAssets" format="string"/>
        <!-- Text style of the message time label: "normal", "bold", and "italic". -->
        <attr name="streamUiMessageTimeTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
    </declare-styleable>
</resources>
