<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingVertical="@dimen/stream_ui_spacing_medium"
        >

        <io.getstream.chat.android.ui.feature.messages.list.reactions.edit.internal.EditReactionsView
            android:id="@+id/editReactionsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/stream_ui_spacing_small"
            android:layout_marginEnd="@dimen/stream_ui_spacing_small"
            />

        <io.getstream.chat.android.ui.widgets.internal.TouchInterceptingFrameLayout
            android:id="@+id/messageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/stream_ui_spacing_small"
            />

        <io.getstream.chat.android.ui.feature.messages.list.options.message.internal.MessageOptionsView
            android:id="@+id/messageOptionsView"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/stream_ui_spacing_small"
            android:visibility="gone"
            />

        <io.getstream.chat.android.ui.feature.messages.list.reactions.user.internal.UserReactionsView
            android:id="@+id/userReactionsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/stream_ui_spacing_small"
            android:layout_marginTop="@dimen/stream_ui_spacing_small"
            android:layout_marginEnd="@dimen/stream_ui_spacing_small"
            android:visibility="gone"
            />

    </LinearLayout>

</ScrollView>
