<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/stream_add_channel_empty_users_description"
        android:src="@drawable/stream_empty_user_search"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/stream_add_channel_empty_users_title"
        android:textColor="@color/stream_black_50"
        android:textSize="@dimen/stream_text_medium"
        />
</LinearLayout>
