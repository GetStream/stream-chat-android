<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stream_attachment_dialog_file_item_height"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/stream_shape_selected_media_round"
    >

    <ImageView
        android:id="@+id/iv_file_thumb"
        android:layout_width="@dimen/stream_attachment_dialog_file_type_width"
        android:layout_height="@dimen/stream_attachment_dialog_file_type_height"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/stream_ic_file_csv"
        />

    <TextView
        android:id="@+id/tv_file_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/stream_spacing_medium"
        android:layout_marginEnd="@dimen/stream_spacing_medium"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/stream_text_black"
        android:textSize="@dimen/stream_text_medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_file_size"
        app:layout_constraintEnd_toStartOf="@id/tv_close"
        app:layout_constraintStart_toEndOf="@id/iv_file_thumb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="SlimAaron.pdf"
        />

    <TextView
        android:id="@+id/tv_file_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/stream_spacing_medium"
        android:layout_marginEnd="@dimen/stream_spacing_medium"
        android:textColor="@color/stream_text_grey"
        android:textSize="@dimen/stream_text_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_file_thumb"
        app:layout_constraintTop_toBottomOf="@id/tv_file_title"
        tools:text="123 KB"
        />

    <ImageView
        android:id="@+id/tv_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="8dp"
        android:background="@drawable/stream_circle_white"
        android:backgroundTint="@color/stream_grey_medium_light"
        android:padding="10dp"
        android:scaleType="center"
        android:src="@drawable/stream_ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/stream_white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
